          "allowNo": false
        },
        "all": {
          "name": "all",
          "type": "boolean",
          "char": "A",
          "description": "Log out of all contexts",
          "required": false,
          "allowNo": false
        },
        "context": {
          "name": "context",
          "type": "option",
          "description": "Name of a specific context to log out from (defaults to current context)",
          "required": false,
          "options": [
            "default"
          ],
          "default": "default"
        }
      },
      "args": []
    },
    "cluster:connect": {
      "id": "cluster:connect",
      "description": "Connect a Kubernetes Cluster (in your kubeconfig) to the Platformer Console",
      "pluginName": "platformer-cli",
      "pluginType": "core",
      "aliases": [],
      "examples": [
        "$ platformer connect:cluster",
        "$ platformer connect:cluster <cluster-name as listed in your kubeconfig>",
        "$ platformer connect:cluster --organization <organization> --project <project> # override context defaults"
      ],
      "flags": {
        "help": {
          "name": "help",
          "type": "boolean",
          "char": "h",
          "description": "show CLI help",
          "allowNo": false
        },
        "organization": {
          "name": "organization",
          "type": "option",
          "char": "O",
          "description": "Organization Name",
          "required": false
        },
        "project": {
          "name": "project",
          "type": "option",
          "char": "P",
          "description": "Project Name",
          "required": false
        }
      },
      "args": [
        {
          "name": "cluster",
          "description": "(OPTIONAL) Name of the Kubernetes Cluster to connect to the Platformer Console (must be a cluster name in your kubeconfig). If not provided, the CLI will enter an interactive mode to select a Cluster.",
          "required": false
        }
      ]
    },
    "cluster:list": {
      "id": "cluster:list",
