{
  "version": "0.0.3",
  "commands": {
    "apply": {
      "id": "apply",
      "description": "Create resources in Platformer Console using a Kubernetes YAMLs",
      "pluginName": "platformer-cli",
      "pluginType": "core",
      "aliases": [],
      "flags": {
        "help": {
          "name": "help",
          "type": "boolean",
          "char": "h",
          "description": "show CLI help",
          "allowNo": false
        },
        "all": {
          "name": "all",
          "type": "boolean",
          "char": "A",
          "description": "Log out of all contexts",
          "required": false,
          "allowNo": false
        },
        "organization": {
          "name": "organization",
          "type": "option",
          "char": "O",
          "description": "Organization Name",
          "required": false
        },
        "project": {
          "name": "project",
          "type": "option",
          "char": "P",
          "description": "Project Name",
          "required": false
        },
        "environment": {
          "name": "environment",
          "type": "option",
          "char": "E",
          "description": "Environment Name",
          "required": false
        }
      },
      "args": [
        {
          "name": "filepath",
          "description": "Path to YAML file",
          "required": true
        }
      ]
    },
    "login": {
      "id": "login",
      "description": "Log in to the CLI with your Platformer Account (logs into the current context)",
      "pluginName": "platformer-cli",
      "pluginType": "core",
      "aliases": [],
      "flags": {},
      "args": []
    },
    "logout": {
      "id": "logout",
      "description": "Log out of the CLI (from the current context)",
      "pluginName": "platformer-cli",
      "pluginType": "core",
      "aliases": [],
      "flags": {
        "help": {
          "name": "help",
          "type": "boolean",
